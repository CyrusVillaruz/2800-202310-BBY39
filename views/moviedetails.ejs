<%- include("templates/header") %>
<div class="navbar navbar-light bg-light text-black" style="overflow: hidden; position: fixed; top: 0; width: 100%; margin: 
auto; z-index: 9999; display: flex; align-items: center; padding-left: 15px;">
  <div style="flex-shrink: 0;">
      <a class="nav-link" href="/" style="display: flex; align-items: center;">
          <img src="/arrow.png" width="30" height="30" alt="back icon">
      </a>
  </div>
  <div style="flex-grow: 1; text-align: center; overflow: hidden;">
      <h3 id="movieTitle" style="white-space: nowrap; overflow: hidden; margin: 0; max-width: 100%;"><%= movie.Title %></h3>
  </div>
  <div style="flex-shrink: 0; width: 30px;"></div>
</div>
<br>

<div class="container" style="margin-top: 100px;">
  <div class="card p-3" style="display: flex;">
    <div style="display: flex; align-items: center; justify-content: center; padding-bottom: 10px;">
      <img class="" src="<%= movie.Poster_Url %>" width="100" alt="movie poster">
    </div>
    <div>
      <h3 class="lead" id="movieContainer">
        <span>Original Language:</span>
        <span><%= movie.Original_Language %></span>
      </h3>
      <p class="" id="movieContainer">
        <span>Genre:</span>
        <span><%= movie.Genre %></span>
      </p>
      <h3 class="lead" id="movieContainer">
        <span>Rating:</span>
        <span><%= movie.Vote_Average %></span>
      </h3>
    </div>
  </div>

    <div class="card p-3">
      <h3 class="display-6">Description:</h3>
      <p class="">
        <%= movie.Overview %>
      </p>
    </div>

    <div class="card p-3">
      <h3 class="lead"  id="movieContainer">
        <span>Release Date:</span> 
        <span><%=movie.Release_Date %></span>
      </h3>
  </div>
  </div>

  <script>
    function egg() {
      console.log("egg");
      if (<%= watchlistLength %> == 4) {
        alert("MovieMate Profile Picture unlocked!");
      }
    }
  </script>
  
  <br><br><br>

  <nav class="navbar navbar-light bg-light" style="overflow: hidden; position: fixed; justify-content: space-evenly; bottom: 0; width: 100%;">
    <a class="navbar-link" href="/add-to-not-interested?movieId=<%= movie._id %>">
      <img src="/remove.png" width="45" height="45" alt="x icon">
    </a>
    <a class="nav-link" href="/add-to-interested?movieId=<%= movie._id %>" onclick="egg()">
      <img src="/check.png" width="45" height="45" alt="checkmark icon">
    </a>
  </nav>
</body>

<style>
  #movieContainer {
    display: flex; 
    justify-content: space-between;
  }
  
  @media (max-width: 700px) {
    #movieTitle {
      font-size: 18px;
    }
  }
  
  @media (max-width: 525px) {
    #movieTitle {
      font-size: 16px;
    }
  }
  
  @media (max-width: 475px) {
    #movieTitle {
      font-size: 14px;
    }
  }
  
  @media (max-width: 400px) {
    #movieText {
      font-size: 12px;
    }
    #movieTitle {
      font-size: 13px;
    }
  }
  
  @media (max-width: 350px) {
    #movieTitle {
      font-size: 12px;
    }
  }
  </style>

</html>
